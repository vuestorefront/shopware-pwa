{
  "name": "shopware-pwa",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/**/**"
    ]
  },
  "scripts": {
    "start": "yarn && yarn build --types && node scripts/init.js",
    "dev": "node scripts/dev.js",
    "dev:client": "yarn dev shopware-6-client -format=esm-bundler",
    "dev:composables": "yarn dev composables -format=esm-bundler",
    "dev:helpers": "yarn dev helpers -format=esm-bundler",
    "dev:nuxt-module": "yarn dev nuxt-module -format=cjs",
    "dev:debug": "node --inspect scripts/dev.js",
    "build": "node scripts/build.js",
    "postinstall": "node scripts/linkDependencies.js && lerna link",
    "lint": "prettier --write --parser typescript 'packages/**/*.ts'",
    "test": "jest",
    "test:e2e": "jest --e2e=true --runInBand",
    "test:coverage": "yarn test --coverage",
    "docs:dev": "vuepress dev docs",
    "docs:build": "node scripts/generateDocs.js && vuepress build docs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@microsoft/api-extractor": "^7.7.8",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-replace": "^2.3.1",
    "@types/faker": "^4.1.10",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.0",
    "axios": "^0.19.2",
    "brotli": "^1.3.2",
    "chalk": "^3.0.0",
    "conventional-changelog-cli": "^2.0.31",
    "coveralls": "^3.0.9",
    "execa": "^4.0.0",
    "faker": "^4.1.0",
    "fs-extra": "^8.1.0",
    "fs-jetpack": "^2.2.3",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "minimist": "^1.2.0",
    "prettier": "~1.19.1",
    "rollup": "^2.0.3",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "ts-jest": "^25.2.1",
    "tslib": "^1.11.1",
    "typedoc": "^0.16.11",
    "typedoc-plugin-markdown": "^2.2.17",
    "typescript": "^3.7.5",
    "vuepress": "^1.3.1",
    "vuepress-bar": "^0.2.3",
    "yorkie": "^2.0.0"
  },
  "engines": {
    "node": ">=10.x"
  }
}
